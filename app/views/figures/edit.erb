<h1>Edit <%= @figure.name %></h1>

<form action="/figures/<%= @figure.id %>" method="POST">

  <label>Name</label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name%>">
  <br></br>

  <label>Choose an existing landmark:</label>

  <br></br>
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
  <% end %>

  <br></br>
  <label>and/or, create a new landmark:</label>
  <br></br>

  <label for="landmark_name">Landmark Name</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label for="landmark_year_completed">Landmark Year Completed</label>
  <input type="text" name="landmark[year_completed]" id="landmark.year_completed">

  <br></br>

  <label>Choose an existing title:</label>

  <br></br>

  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>" <%='checked' if @figure.titles.include?(title) %>>
  <% end %>

  <br></br>
  <label>and/or, create a new title:</label>
  <br></br>

  <label for="title_name">Title Name</label>
  <input type="text" name="title[name]" id="title.name">
  <br></br>

  <input type="submit" value="Edit Figure">
</form>
