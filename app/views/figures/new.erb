<h1>Add a New Figure</h1>

<form action="/figures" method="POST">

  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name">
  <br></br>

  <label>Choose an existing landmark:</label>

  <br></br>
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
  <% end %>
  <br></br>

  <label>and/or, create a new landmark:</label>
  <br></br>

  <label for="landmark_name">Landmark Name</label>
  <input type="text" id="new_landmark" name="landmark[name]">

  <label for="landmark_year_completed">Landmark Year Completed</label>
  <input type="text" name="landmark[year_completed]">
  <br></br>

  <label>Choose an existing title:</label>

  <br></br>
  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"><br>
  <% end %>
  <br></br>

  <label>and/or, create a new title:</label>
  <br></br>
  <label for="title_name">Title Name</label>
  <input type="text" id="new_title" name="title[name]">


  <input type="submit" value="Create New Figure">
</form>
